# Please see http://i3wm.org/docs/userguide.html for a complete reference!

default_border pixel 1
#new_float normal
hide_edge_borders smart # Hide borders

client.focused #990000 #285577 #ffffff #2e9ef4 #1e90ff
client.unfocused #333333 #222222 #888888 #292d2e #a9a9a9

exec_always --no-startup-id ~/.config/polybar/launch.sh

exec_always --no-startup-id nm-applet

############################
## settings key binding   ##
############################

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# Lock screen
bindsym $mod+9 exec --no-startup-id blurlock
# kill focused window
bindsym $mod+Shift+q kill
# start terminal emulator
bindsym $mod+Return exec terminal # keep the default
bindsym $mod+F1 exec termite
# start program launcher
bindsym $mod+F2 exec --no-startup-id rofi -show run -theme white
# start bookmark menu
bindsym $mod+F3 exec ~/projects/scripts/bin/rofi-bookmarks
# split orientation
bindsym $mod+Shift+bar split h;exec notify-send 'tile horizontally'
bindsym $mod+minus split v;exec notify-send 'tile vertically'
# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle
# move floating windows with your mouse
floating_modifier Mod4

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# switch to workspace
bindsym $mod+1 workspace 1: local
bindsym $mod+2 workspace 2: remote
bindsym $mod+3 workspace 3: docs
bindsym $mod+4 workspace 4: scratch

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        bindsym l resize grow width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym h resize shrink width 5 px or 5 ppt

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Move containers/workspaces between screens
bindsym $mod+d mode "$display"
set $display container: h,l,p (left/right/primary) | workspace: H,L,P (left,right/primary)
mode "$display" {
        bindsym h move container to output left
        bindsym l move container to output right
        bindsym p move container to output primary
        bindsym Shift+h move workspace to output left
        bindsym Shift+l move workspace to output right
        bindsym Shift+p move workspace to output primary
#        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


############################
## settings for i3-gaps:  ##
############################

# Set inner/outer gaps
gaps inner 10
gaps outer 0


