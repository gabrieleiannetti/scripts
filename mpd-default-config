if [ $# -lt 1 ]
then
  echo "ERROR: Not enough arguments."
  echo "  $(basename $0) /path/to/music"
  exit 1
fi

path=$1

if ! $(which mpc 1>-)
then
  echo "Please install MPD client \`mpc\`".
  exit 1
fi

if [ ! -d ~/.mpd ] 
then
  mkdir -v -p ~/.mpd/playlists
fi

cat > $HOME/.mpdconf <<EOF
bind_to_address         "127.0.0.1"
port                    "6666"
music_directory         "$path"
playlist_directory      "~/.mpd/playlists"
db_file                 "~/.mpd/mpd.db"
log_file                "~/.mpd/mpd.log"
pid_file                "~/.mpd/mpd.pid"
mixer_type              "software"
audio_output { 
 type "alsa"
 name "My ALSA Device"
}
EOF

echo "MPD configuration written to ~/.mpdconf"

# vim: set syntax=sh:
