if [ -z $SCRIPTS ]
then
	echo \$SCRIPTS requries to be set!
	exit 1
fi


i3_config=~/.i3/config
i3_config_custom=$SCRIPTS/etc/i3/config

ans=n
if [ -f ~/.i3/config ]
then
	echo -n "Overwrite $i3_config (y/n)? "
	read ans
	[[ "$ans" = "y" ]] || exit 0
	# backup original configuration
	cp $i3_config ${i3_config}.orig
fi


echo -n "Link $i3_config to $i3_config_custom (y/n)? "
read ans
[[ "$ans" = "y" ]] || exit 0

ln -sf $i3_config_custom $i3_config 

echo Reload i3 with \$mod+Shift+r


