#!/bin/bash

config=$HOME/.tmux.conf

if [ -e $config ]
then
  echo "Tmux configuration $config already exits!"
  exit 0
fi

##
# Installation
#
if ! command -v tmux 2>&1 >/dev/null ; then
  
  # Debian based platform...
  if command -v apt 2>&1 >/dev/null ; then
    # required packages
    sudo apt -qy install tmux
  fi

  # On Fedora...
  if command -v dnf 2>&1 >/dev/null ; then
    sudo dnf install -qy tmux
  fi
fi


##
# Configure
#
cat > $config <<EOF
set -g default-terminal "screen-256color"
set-option -g default-shell /bin/zsh

# uncomment for GUI support
set -g mouse on
## -- version prior 2.1 -- 
#set -g mode-mouse on
#setw -g mouse-select-window on
#setw -g mouse-select-pane on

setw -g monitor-activity on
set -g visual-activity on
setw -g automatic-rename

set-option -g prefix C-a
unbind C-b
bind-key C-a last-window

bind a send-prefix

# force reload of config file
unbind r
bind r source-file ~/.tmux.conf

unbind %
bind | split-window -h
bind - split-window -v 

# pane switching with Alt arrows 
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# keybindings to make resizing easier
bind -r Left resize-pane -L
bind -r Right resize-pane -D
bind -r Up resize-pane -U
bind -r Down resize-pane -R

# status line
set -g status-position top
set -g status-fg colour237
set -g status-bg colour254
set -g pane-border-fg colour249
set -g pane-active-border-fg colour244
set -g message-fg colour88
set -g message-bg default

##-- versions prior 2.1 --##
#set -g status-utf8 on

set -g status-right ''
set -g window-status-separator ''
set -g status-left '#[fg=colour254,bg=colour234,bold] #S #[fg=colour234,bg=colour254,nobold]'
set -g window-status-format "#[fg=colour244,bg=colour254] #I:#[fg=colour240]#[default]#W "
set -g window-status-current-format "#[fg=colour254,bg=colour221,bold]#[fg=colour130,bg=colour221] #I:#[fg=colour130,bold]#W #[fg=colour221,bg=colour254,nobold]"
set -g window-status-activity-style bg=colour224
EOF

echo "Tmux configuration written to $config."
