#!/usr/bin/env bash

sudo apt install -y \
        build-essential \
        git \
        ccache \
        cmake \
        cmake-data \
        compton \
        pkg-config \
        python3-sphinx \
        libcairo2-dev \
        libxcb1-dev \
        libxcb-util0-dev \
        libxcb-randr0-dev \
        libxcb-composite0-dev \
        python-xcbgen \
        xcb-proto \
        libxcb-image0-dev \
        libxcb-ewmh-dev \
        libxcb-icccm4-dev

cd /tmp
wget https://github.com/jaagr/polybar/releases/download/3.3.1/polybar-3.3.1.tar
tar -xvf polybar-3.3.1.tar && cd polybar
mkdir build && cd build
cmake ..
make -j$(nproc)
sudo make install
