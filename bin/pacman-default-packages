#!/usr/bin/env bash

if [ -f /usr/sbin/pacman ]
then
        # select fastest mirror
        sudo pacman-mirrors -c Germany
        # update database & packages
        sudo pacman --refresh \
                    --sync \
                    --sysupgrade \
                    --noconfirm \
                    --quiet
        # install required packages
        sudo pacman --sync \
                    --needed \
                    --noconfirm \
                    --quiet \
                bat \
                bind-tools \
                cdrtools \
                compton \
                dvdbackup \
                encfs \
                exa \
                feh \
                firejail \
                firefox \
                fzf \
                git \
                git-annex \
                handbrake \
                kitty \
                i3-gaps \
                i3exit \
                lsd \
                mp3info \
                mp3wrap \
                mpc \
                mpd \
                ncmpc \
                neofetch \
                pandoc \
                polybar \
                powerline \
                powerline-fonts \
                pulseaudio \
                pulsemixer \
                python-pywal \
                rofi \
                rsync \
                ruby \
                sshfs \
                sshuttle \
                surf \
                tcpdump \
                termite \
                tmux \
                tree \
                ttf-inconsolata \
                unzip \
                vim \
                vim-airline \
                vlc \
                xclip \
                youtube-dl \
                zsh-completions
fi
