#!/usr/bin/env bash

if [ -f /usr/sbin/pacman ]
then
        # select fastest mirror
        sudo pacman-mirrors -c Germany
        # update database & packages
        sudo pacman --refresh \
                    --sync \
                    --sysupgrade \
                    --noconfirm \
                    --quiet
        # install required packages
        sudo pacman --sync \
                    --needed \
                    --noconfirm \
                    --quiet \
                bat \
                base-devel \
                bind-tools \
                ccrypt \
                cdrtools \
                dvdbackup \
                encfs \
                exa \
                feh \
                firejail \
                firefox \
                fzf \
                git \
                git-annex \
                handbrake \
                i3 \
                i3exit \
                lsd \
                mp3info \
                mp3wrap \
                mpc \
                mpd \
                ncmpc \
                neofetch \
                pandoc \
                polybar \
                powerline \
                powerline-fonts \
                python-pywal \
                rsync \
                ruby \
                sshfs \
                sshuttle \
                surf \
                tcpdump \
                tmux \
                tree \
                ttf-inconsolata \
                vim \
                vim-airline \
                vlc \
                xclip \
                youtube-dl \
                zsh-completions
fi

# Install manually if you want AUR packages
# pacman -S yaourt

if [ -f /usr/bin/yaourt ]
then
        yaourt -S clustershell \
                  gromit-mpx-git \
                  key-mon
fi
