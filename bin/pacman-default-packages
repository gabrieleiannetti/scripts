#!/usr/bin/env bash

if [ -f /usr/sbin/pacman ]
then
	# select fastest mirror
	sudo pacman-mirrors -c Germany
	# update database & packages
	sudo pacman --refresh \
                    --sync \
                    --sysupgrade \
                    --noconfirm \
                    --quiet
	# install required packages
	sudo pacman --sync \
                    --needed \
                    --noconfirm \
                    --quiet \
                bat \
                bind-tools \
		ccrypt \
                cdrtools \
		encfs \
		exa \
		feh \
		firejail \
		firefox \
		fzf \
		git \
                mp3wrap \
                mpc \
		mpd \
		ncmpc \
		neofetch \
		pandoc \
		powerline \
		powerline-fonts \
		python-pywal \
		rsync \
		ruby \
		sshfs \
		sshuttle \
		tcpdump \
		tmux \
                tree \
		ttf-inconsolata \
		vim \
                vim-airline \
		xclip \
                zsh-completions
fi
