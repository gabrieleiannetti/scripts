#!/usr/bin/env bash

if [ -f /usr/sbin/pacman ]
then
	# select fastest mirror
	sudo pacman-mirrors -c Germany
	# update database & packages
	sudo pacman -Syyu --noconfirm
	# install required packages
	sudo pacman -S --noconfirm \
		ccrypt \
		encfs \
		exa \
		feh \
		firejail \
		firefox \
		fzf \
		git \
		neofetch \
		python-pywal \
		powerline \
		powerline-fonts \
		rsync \
		ruby \
		sshfs \
		sshuttle \
		tcpdump \
		ttf-inconsolata \
		vim \
	        xclip
fi
