_version=0.1

_error() { echo 1>&2 "Error: $@"; }

_script=${0##*/}

HELP=\
"Usage: $_script COMMAND [ARGUMENTS]"

# Check for dependencies
for cmd in sshfs ; do
  # If missing alert and exit
  type -p $cmd &>/dev/null || { _error "Please install command [$cmd]." ; exit 1 ; }
done

ssh_mount() {
  local remote=$1 ; shift
  local path=$1 ; shift
  # create mount if missing, or exit on error
  ( test -d $path || mkdir -p $path ) || exit 1
  sshfs $remote $path -C -o reconnect,auto_cache,follow_symlinks
}

ssh_umount() {
  local path=$1
  ( mount | grep $path &>/dev/null ) && fusermount -u $path
}

# Read the command-line arguments
_command=$1 ; shift
case "$_command" in
  "list") mount | grep fuse.sshfs | cut -d' ' -f-3 ;;
  "mount") ssh_mount "$@" ;;
  "umount") ssh_umount "$@" ;;
  *) echo $HELP ;;
esac

exit 0


