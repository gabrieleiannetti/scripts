# exit if an uninitialised variable is used
#set -o nonunset
# exit of statement returns a non-true return value
#set -o errexit

# Read the command-line arguments
_command=$1 ; shift
case "$_command" in 
    "cd")
    cd $VM_INSTANCE_PATH/$1.$VM_DOMAIN
    ;;
  "create"|"c") 
    virsh create "$@" 
    ;;
  "define"|"d") 
    virsh define "$@" 
    ;;
  "kill"|"k")
    virsh undefine "$1"
    virsh destroy "$1" 
    ;;
  "list"|"l") 
    virsh list --all 
    ;;
  "remove"|"r") 
    virsh undefine "$1"
    virsh shutdown "$1" 
    ;;
  "shutdown"|"h") 
    virsh shutdown "$1" 
    ;;
  "start"|"s") 
    virsh start "$1" 
    ;;
  "undefine"|"u") 
    virsh undefine "$@"
    ;;
  *) 
    echo "Usage: vm cd|(c)reate|(d)efine|s(h)utdown|(k)ill|(l)ist|(r)emove|(s)tart|(u)ndefine [args]" 
;;
esac

exit 0


