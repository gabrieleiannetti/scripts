# exit if an uninitialised variable is used
set -o nonunset
# exit of statement returns a non-true return value
#set -o errexit

_version=0.1

# Filename of this script
_script=$(basename $0)

# Help text for this script
function _help() {
  echo "Usage: $_script [COMMAND] [ARGUMENTS]
  
  Add more text here"
}

# enable line numbers for debug output
if [ "$_DEBUG" = "true" ] ; then
  export PS4='(${BASH_SOURCE}:${LINENO}):${FUNCNAME[0]}-[${SHLVL},${BASH_SUBSHELL},$?] '
fi
function _debug() {
  if [ "$_DEBUG" = "true" ]; then
    echo 1>&2 "Debug: $@"
  fi
}

function _error() {
  echo 1>&2 "Error: $@"
}

# Parse the command line options
ARGS=$(getopt -o h -l "help" -- "$@")
eval set -- "$ARGS"
while true; do
  case "$1" in
    -h|--help)
      _help
      exit 0
      ;;
    --) shift; break ;;
    *) break ;;
  esac
done

# Read the command-line arguments
_command=${1:-help}

### HERE COME THE APPLICATION FUNCTIONS

case "$_command" in 
  # call functions for each command
  *) _help ;;
esac

exit 0


